
{{!-- products section --}}

<section>
<div>
        {{!-- <h1 class="fw-bold mb-2 text-uppercase text-center">Admin Panel</h1>
        --}}
        <div class="row d-flex justify-content-left align-items-center h-100">
            <div class="col-12 col-md-6 col-lg-6 col-xl-5 col-md-6 ml-4">
                <div class="card bg-light text-black" style="border-radius:
                    0rem;">

                    <div class="card-body p-5 text-left">
                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2  mb-5">Add New
                                User</h2>
                            {{!-- <p class="text-white-50 mb-5">Please enter
                                your
                                login and password!</p> --}}
                            <form action="/admin/admin-submitUser"
                                method="post">
                                <div class="form-outline form-white mb-4">
                                    <label class="form-label text-black"
                                        for="typeEmailX">User
                                        ID</label>
                                    <input type="text" id="typeEmailX"
                                        class="form-control form-control-lg"
                                        name="userName"  required/>

                                </div>

                                 <div class="form-outline form-white mb-4">
                                    <label class="form-label text-black"
                                        for="typeEmailX">First
                                        Name</label>
                                    <input type="text" id="typeEmailX"
                                        class="form-control form-control-lg"
                                        name="firstName" required/>

                                </div>

                                 <div class="form-outline form-white mb-4">
                                    <label class="form-label text-black"
                                        for="typeEmailX">Second
                                        Name</label>
                                    <input type="text" id="typeEmailX"
                                        class="form-control form-control-lg"
                                        name="lastName"/>

                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label class="form-label text-black"
                                        for="typePasswordX">Password</label>
                                    <input type="password" id="typePasswordX"
                                        class="form-control form-control-lg"
                                        name="password" required/>

                                </div>

                                {{!-- <p class="small mb-5 pb-lg-2"><a
                                        class="text-white-50" href="#!">Forgot
                                        password?</a></p> --}}
                                {{#if loginError}}
                                <p style="color: red;">invalid username or
                                    password</p>
                                {{/if}}
                                <button class="btn btn-outline-light btn-lg
                                    px-5 mt-5 bg-success" type="submit">Submit</button>
                                <div class="d-flex justify-content-center
                                    text-center mt-4 pt-1">
                                    <a href="#!" class="text-white"><i
                                            class="fab fa-facebook-f fa-lg"></i></a>
                                    <a href="#!" class="text-white"><i
                                            class="fab fa-twitter fa-lg mx-4
                                            px-2"></i></a>
                                    <a href="#!" class="text-white"><i
                                            class="fab fa-google fa-lg"></i></a>
                                </div>
                            </form>
                        </div>

                        <div>
                            <p class="d-flex justify-content-end
                                    text-center mt-4 pt-1">Go back to <a
                                    href="/admin/goback"
                                    class="text-black">&nbsp;User Panel</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>