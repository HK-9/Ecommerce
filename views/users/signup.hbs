<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius:
                    1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Sign-up</h2>
                            <p class="text-white-50 mb-5">Please fill your
                                details and credential!</p>

                            <form action="/signup" method="post">
                            
                                 <label class="form-label" for="typeEmailX">First
                                        Name</label>
                                <div class="form-outline form-white mb-4">
                                    <input type="text" id="typeEmailX"
                                        class="form-control form-control-lg"
                                        name="firstName" required/>
                                </div>

                                <label class="form-label" for="typeEmailX">Second Name</label>
                                 <div class="form-outline form-white mb-4">
                                    <input type="text" id="typeEmailX"
                                        class="form-control form-control-lg"
                                        name="lastName" required/>
                                </div>

                                     <label class="form-label" for="typeEmailX">User
                                        Name</label>
                                    <div class="form-outline form-white mb-4">
                                    <input type="text" id="typeEmailX"
                                        class="form-control form-control-lg"
                                        name="userName" required/>
                                </div>
                                
                                <label class="form-label"
                                        for="typePasswordX">Password</label>
                                <div class="form-outline form-white mb-4">
                                    <input type="password" id="typePasswordX"
                                        class="form-control form-control-lg"
                                        name="password" required/>
                                    
                                </div>

                                <label class="form-label"
                                        for="typePasswordX">Confirm Password</label>
                                <div class="form-outline form-white mb-4">
                                    <input type="password" id="typePasswordX"
                                        class="form-control form-control-lg"
                                        name="conpassword" required/>
                                    
                                </div>

                                <p class="small mb-5 pb-lg-2"><a
                                        class="text-white-50" href="#!">Forgot
                                        password?</a></p>
                                {{#if loginError}}
                                <p style="color: red;">invalid username or
                                    password</p>
                                {{/if}}
                                <button class="btn btn-outline-light btn-lg
                                    px-5" type="submit">Create Account</button>

                                <div class="d-flex justify-content-center
                                    text-center mt-4 pt-1">
                                    <a href="#!" class="text-white"><i
                                            class="fab fa-facebook-f fa-lg"></i></a>
                                    <a href="#!" class="text-white"><i
                                            class="fab fa-twitter fa-lg mx-4
                                            px-2"></i></a>
                                    <a href="#!" class="text-white"><i
                                            class="fab fa-google fa-lg"></i></a>
                                </div>
                            </form>
                        </div>

                        <div>
                            {{!-- <p class="mb-0">Go back to  <a href="/login "
                                    class="text-white-50 fw-bold">Login page</a>
                            </p> --}}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>